<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Update_contact">


    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:background="@color/greyDark"
        android:text="@string/search"
        android:textColor="@android:color/black"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/search"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/search_button"
        android:background="#ECE4E4"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/new_mobile"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@color/colorgreyLight"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:padding="2dp"
        android:inputType="phone"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/new_name"
        android:layout_toRightOf="@id/tv3"
        />

    <EditText
        android:id="@+id/new_email"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:background="@color/colorgreyLight"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginRight="10dp"
        android:padding="2dp"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/new_mobile"
        android:layout_toRightOf="@id/tv4" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:text="Update conatct"
        android:textSize="24dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/white"
        android:layout_below="@+id/new_email"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:textSize="20sp"
        android:text="PHONE NO:"
        android:layout_below="@+id/tv2" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:padding="2dp"
        android:text="EMAIL : "
        android:layout_below="@+id/tv3" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Edit information to be updated"
        android:textSize="22sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/search_button"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:padding="2dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="NAME :"
        android:layout_below="@+id/tv1" />
    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="20sp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button"
        android:text="ENTER NAME "
        android:textColor="#FFFFFF"
        />
    <EditText
        android:id="@+id/new_name"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:background="@color/colorgreyLight"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="2dp"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv1"
        android:layout_toRightOf="@id/tv2"/>
    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:paddingLeft="8dp"
        android:paddingTop="3sp"
        android:paddingRight="8dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text=" Display information "
        android:textColor="@color/colorBlueMEdium"
        android:layout_below="@+id/update_button" />
</RelativeLayout>